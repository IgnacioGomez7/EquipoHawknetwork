<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.equipohawknetwork"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Recomendado si no lo tienes ya (Firestore/FCM necesitan red) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Android 13+ requiere permiso de runtime para notificaciones -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <!-- ðŸ”” Defaults para FCM: icono y canal por defecto -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="default_channel" />

        <!-- Pantalla principal (NO launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Compose de eventos -->
        <activity
            android:name=".EventsActivity"
            android:exported="false" />

        <!-- Login como launcher -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- ðŸ”” Servicio de Firebase Cloud Messaging -->
        <service
            android:name=".push.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>
</manifest>
