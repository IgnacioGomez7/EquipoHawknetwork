<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/celeste_background"
    android:padding="24dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoHawkNetwork"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:maxHeight="100dp"
        android:src="@drawable/logo_hawknetwork_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textBienvenida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:text="Â¡Sean bienvenidos a la app de Proud Fitness, somos el team HawkNetwork!"
        android:textAlignment="center"
        android:textColor="@color/primary_dark_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoHawkNetwork" />

    <TextView
        android:id="@+id/textIntegrantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Integrantes: Diego, Ignacio, Roberto y Said"
        android:textSize="18sp"
        android:textColor="@color/secondary_gray"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textBienvenida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>